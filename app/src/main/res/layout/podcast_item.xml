<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="sinlglePodcastViewModel"
            type="com.pietrantuono.podcasts.addpodcast.customviews.SinlglePodcastViewModel"/>
    </data>

    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/orange"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_elevation"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <com.pietrantuono.podcasts.addpodcast.customviews.SquareImageView
                    bind:image="@{sinlglePodcastViewModel.imageUrl}"
                    android:id="@+id/podcast_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitCenter"
                    android:transitionName="@string/detail_transition"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/podcast_image">

                    <TextView
                        android:text="@{sinlglePodcastViewModel.title}"
                        android:id="@+id/title"
                        style="@style/Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:layout_toLeftOf="@+id/overflow"
                        android:ellipsize="end"
                        android:maxLines="2"/>

                    <TextView
                        android:text="@{sinlglePodcastViewModel.author}"
                        android:id="@+id/author"
                        style="@style/Author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/title"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <ImageView
                        android:id="@+id/overflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="8dp"
                        android:src="@drawable/ic_more_vert_black_12dp"/>

                    <TextView
                        android:text="@{sinlglePodcastViewModel.genre}"
                        android:id="@+id/genre"
                        style="@style/Genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/author"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:maxLines="3">
                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/genre">

                        <TextView
                            android:text="@{sinlglePodcastViewModel.trackCount}"
                            android:id="@+id/episodes_number"
                            style="@style/Normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:layout_marginRight="@dimen/standard_margin"
                            />

                        <TextView
                            android:text="@{sinlglePodcastViewModel.releaseDate}"
                            android:id="@+id/release_date"
                            style="@style/Normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:layout_marginRight="@dimen/standard_margin"
                            />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</layout>