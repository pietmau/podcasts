<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/colorBackground"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_view"
        android:background="@android:color/white"
        android:layout_marginBottom="@dimen/generic_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.SearchView>

    <com.pietrantuono.podcasts.addpodcast.customviews.CustomProgressBar
        android:visibility="visible"
        android:indeterminate="true"
        android:layout_below="@+id/search_view"
        android:id="@+id/progress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_heigth"/>

    <com.pietrantuono.podcasts.addpodcast.customviews.PodcastsRecycler
        android:layout_below="@+id/progress"
        android:id="@+id/search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.pietrantuono.podcasts.addpodcast.customviews.PodcastsRecycler>


</RelativeLayout>