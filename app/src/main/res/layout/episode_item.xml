<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/tools"
        xmlns:lib="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.pietrantuono.podcasts.addpodcast.singlepodcast.viewmodel.PodcastEpisodeView"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            lib:cardCornerRadius="@dimen/card_corner_radius"
            lib:cardElevation="@dimen/card_elevation"
            lib:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/episode_item_image"
                    bind:viewModel="@{viewModel}"/>

                <include
                    android:id="@+id/content"
                    layout="@layout/episode_item_content"
                    bind:viewModel="@{viewModel}"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>