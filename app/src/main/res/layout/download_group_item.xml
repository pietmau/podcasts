<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="podcast"
            type="com.pietrantuono.podcasts.downloadfragment.view.custom.DownloadedPodcast"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:srcCompat="@drawable/ic_more_vert_white_24dp"
                android:id="@+id/overflow"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toLeftOf="@+id/overflow"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@{podcast.title}"
                android:textAppearance="?android:textAppearanceSmall"/>

            <TextView
                android:id="@+id/downloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/title"
                android:drawableLeft="@drawable/ic_cloud_done_white_24dp"
                android:text="@{podcast.downloadedCountText}"
                android:textAppearance="?android:textAppearanceSmall"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/not_downloaded"
                android:layout_toLeftOf="@+id/not_downloaded"
                android:text="@{podcast.totalNumberofEpisodes}"
                android:textAppearance="?android:textAppearanceSmall"/>

            <TextView
                android:id="@+id/not_downloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/downloaded"
                android:drawableLeft="@drawable/ic_cloud_download_white_24dp"
                android:text="@{podcast.notDownloadedCountText}"
                android:textAppearance="?android:textAppearanceSmall"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>