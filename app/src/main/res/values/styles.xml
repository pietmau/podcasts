<resources>

    <!-- Base application theme. -->
    <style name="TransparentToolbarTheme" parent="BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustResize</item>
    </style>


    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/BiggerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Author">
        <item name="android:textColor">@color/authorTextColor</item>
        <item name="android:textSize">@dimen/BigTextSize</item>
    </style>

    <style name="Genre">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/NormalTextSize</item>
    </style>

    <style name="Normal">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/NormalTextSize</item>
    </style>

    <style name="Big">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/BigTextSize</item>
    </style>


</resources>
