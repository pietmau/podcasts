<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pietrantuono.podcasts">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="sensor"
        android:theme="@style/TransparentToolbarTheme">

        <activity
            android:name=".main.view.MainActivity"
            android:screenOrientation="sensor"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.pietrantuono.podcasts.addpodcast.singlepodcast.view.AddSinglePodcastActivity">
        </activity>

        <activity
            android:name="com.pietrantuono.podcasts.addpodcast.singlepodcast.view.SingleSubscribedPodcastActivity">
        </activity>

        <service
            android:name="com.pietrantuono.podcasts.player.player.service.PlayerService"
            android:exported="false">
        </service>

        <service
            android:name="com.pietrantuono.podcasts.repository.SaveEpisodeIntentService"
            android:exported="false">
        </service>

        <service
            android:process=":download"
            android:name="com.pietrantuono.podcasts.downloader.DowloaderService"
            android:exported="false">
        </service>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="149dc5c633a9120f622c8468fd3423b84f7932c5"/>
    </application>

</manifest>